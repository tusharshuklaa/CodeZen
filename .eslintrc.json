{
  "env": {
    "browser": true,
    "webextensions": true,
    "es6": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "CodeZenBG": true
  },
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": "warn",
    "max-lines-per-function": [
      "error",
      {
        "max": 30,
        "skipComments": true,
        "skipBlankLines": true,
        "IIFEs": false
      }
    ],
    "no-alert": "error",
    "no-console": "warn"
  }
}
