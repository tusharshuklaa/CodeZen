{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/spec",
    "declarationMap" :true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "es2018", "dom"],
    "target": "es2018",
    "locale": "en",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "app/scripts",
    "preserveConstEnums": true,
    "sourceMap": true
  }
}